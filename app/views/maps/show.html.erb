<div class="page-wrap">
   <header>
      <div class="page-header">
         <h1>Map Profile</h1>
      </div>
   </header>





   <!-- TEMP NAV -->
   <div class="btn-group">
      <a href="/index"><button type="button" class="btn btn-md btn-success">Home</button></a>
      <a href="/sessions/new"><button type="button" class="btn btn-md btn-info">Login</button></a>
      <a href="/users/new"><button type="button" class="btn btn-md btn-warning">Sign Up</button></a>
      <a href="/maps/new"><button type="button" class="btn btn-md btn-success">Map Creator</button></a>

      <a href="/maps"><button type="button" class="btn btn-md btn-danger">Gallery</button></a>

      <% if @current_user %>
         <a href="/users/<%= @current_user.id %>"><button type="button" class="btn btn-md btn-primary">Profile</button></a>
      <% else %>
         <p>Not Logged In</p>
      <% end %>
   </div>






   <h1> <%= @map.title %> </h1>

   <hr>

   <h3> Created By: <%= @creator.first_name %> </h3>

   <p> <%= @user.username %> is the one logged in. FYI. </p>




   <!-- VERSION SEEING CONTROLS -->

   <div>
      <img src="<%= @map.url %>">
   </div>




   <!-- VERSION CREATION CONTROLS (SENDS TO VERSION AND IS CREATED OFF OF CURRENTLY VIEWED VERSION) -->
   <!-- <= button_to  > -->
   <a href="/maps/<%= @map.id %>/versions/new"><button class="btn btn-sm btn-default">Created New Version</button></a>



   <div>
      <% if @map.versions %>
         <!-- TEST TEST TEST -->
         <% num = 0 %>
         <ul>
         <% @versions = @map.versions %>
         <% @versions.each do |version| %>
         <% num += 1 %>
            <li> <img src="<%= version.url %>"> </li>
         <% end %>
         </ul>
         <p>Number of versions: <strong> <%= num %> </strong></p>
      <% else %>
         <h3>Master Version Only</h3>
      <% end %>
   </div>





</div>


