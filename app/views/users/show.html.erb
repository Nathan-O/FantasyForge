<div class="page-wrap">

   <header>
      <div class="page-header">
         <h1>Hello <%= @user.username %> </h1>
      </div>
   </header>





   <!-- TEMP NAV -->
   <div class="btn-group">
      <a href="/index"><button type="button" class="btn btn-md btn-success">Home</button></a>
      <a href="/sessions/new"><button type="button" class="btn btn-md btn-info">Login</button></a>
      <a href="/users/new"><button type="button" class="btn btn-md btn-warning">Sign Up</button></a>
      <a href="/maps/new"><button type="button" class="btn btn-md btn-success">Map Creator</button></a>

      <a href="/maps"><button type="button" class="btn btn-md btn-danger">Gallery</button></a>

      <% if @current_user %>
         <a href="/users/<%= @current_user.id %>"><button type="button" class="btn btn-md btn-primary">Profile</button></a>
      <% else %>
         <p>Not Logged In</p>
      <% end %>
   </div>






   <div class="button-group" role="group">
      <a href="/index"><button type="button" class="btn btn-md btn-warning">Home</button></a>
      <!-- <a href="/users/<%= @current_user.id %>"><button type="button" class="btn btn-xs btn-info">Profile</button></a> -->
      <%= button_to "Logout", logout_path, method: "delete", class: "red pull-left btn btn-danger btn-xs navbar-right navbar-btn" %>
   </div>

   <div class="row">
		<a href="/users/<%= @user.id %>/edit"><button class="btn btn-danger btn-block">Edit Profile</button></a>
	</div>

</div>
